

<div
  class="social-icons__wrapper"
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .social-icons__wrapper {
    display: flex;
    gap: var(--gap-sm);
    flex-wrap: wrap;
    justify-content: center;

    @media screen and (min-width: 750px) {
      flex-wrap: nowrap;
      justify-content: flex-start;
    }
  }
{% endstylesheet %}

{% render 'footer-social-icons', settings: block.settings %}

{% schema %}
{
  "name": "Footer Social Icons",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook"
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter/X"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram"
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "YouTube"
    },
    {
      "type": "url",
      "id": "social_tiktok_link",
      "label": "TikTok"
    }
  ]
}
{% endschema %}
