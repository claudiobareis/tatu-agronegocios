{% assign metafields = product.metafields.custom %}

{% assign campos = 
  "beneficios,tecnologia_das_lentes,caracteristicas_da_armacao,design_e_detalhes,detalhes_do_produto,informacoes_importantes" 
  | split: "," %}

{% assign titulos = 
  "Benefícios,Tecnologia das Lentes,Características da Armação,Design e Detalhes,Detalhes do Produto,Informações Importantes"
  | split: "," %}

{% for campo in campos %}
  {% assign valor = metafields[campo] %}
  {% if valor != blank %}
    <div class="product__accordion accordion">
      <details>
        <summary>
          <div class="summary__title">
            {% render 'icon-accordion', icon: 'check_mark' %}
            <h2 class="h4 accordion__title">{{ titulos[forloop.index0] }}</h2>
          </div>
          {{ 'icon-caret.svg' | inline_asset_content }}
        </summary>
        <div class="accordion__content rte">
          {{ valor | metafield_tag }}
        </div>
      </details>
    </div>
  {% endif %}
{% endfor %} 