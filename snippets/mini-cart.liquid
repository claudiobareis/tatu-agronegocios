{% comment %}
  Mini Cart Customizado
  Sempre mostra o conteúdo atual do carrinho
{% endcomment %}

<div id="mini-cart" class="mini-cart" style="display: none;">
  <div class="mini-cart__overlay" onclick="closeMiniCart()"></div>
  <div class="mini-cart__content">
    <div class="mini-cart__header">
      <h2 class="mini-cart__title">{{ 'general.cart.view_empty_cart' | t }}</h2>
      <button type="button" class="mini-cart__close" onclick="closeMiniCart()" aria-label="{{ 'accessibility.close' | t }}">
        <span class="svg-wrapper">
          {{- 'icon-close.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
    
    <div class="mini-cart__body">
      <div id="mini-cart-items" class="mini-cart__items">
        <!-- Conteúdo será carregado via JavaScript -->
      </div>
    </div>
    
    <div class="mini-cart__footer">
      <div class="mini-cart__total">
        <span class="mini-cart__total-label">Total:</span>
        <span id="mini-cart-total" class="mini-cart__total-value">{{ cart.total_price | money }}</span>
      </div>
      
      <div class="mini-cart__actions">
        <a href="{{ routes.cart_url }}" class="button button--secondary button--full-width">
          {{ 'general.cart.view_empty_cart' | t }}
        </a>
        <form action="{{ routes.cart_url }}" method="post">
          <button type="submit" name="checkout" class="button button--primary button--full-width">
            {{ 'sections.cart.checkout' | t }}
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
.mini-cart {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.mini-cart__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.mini-cart__content {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 400px;
  height: 100%;
  background-color: white;
  box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.3s ease;  
}

.mini-cart.active .mini-cart__content {
  transform: translateX(0);
}

.mini-cart__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid #e5e5e5;
}

.mini-cart__title {
  margin: 0;
  font-size: 1.2rem;
  font-weight: 600;
}

.mini-cart__close {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.mini-cart__close:hover {
  background-color: #f5f5f5;
}

.mini-cart__body {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.mini-cart__items {
  min-height: 200px;
}

.mini-cart-item {
  display: flex;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.mini-cart-item:last-child {
  border-bottom: none;
}

.mini-cart-item__remove {
  position: absolute;
  top: 0.5rem;
  right: 0;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.25rem;
  border-radius: 4px;
  color: #999;
  font-size: 1.5rem;
  transition: color 0.2s;
}

.mini-cart-item__remove:hover {
  color: #e74c3c;
}

.mini-cart-item__image {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 4px;
}

.mini-cart-item__details {
  flex: 1;
}

.mini-cart-item__name {
  font-weight: 600;
  margin: 0 0 0.5rem 0;
  font-size: 1.2rem;
}

.mini-cart-item__variant {
  font-size: 0.8rem;
  color: #666;
  margin: 0 0 0.5rem 0;
}

.mini-cart-item__price {
  font-weight: 600;
  color: #333;
  margin: 0;
  padding: 0;
}

.mini-cart-item__quantity {
  font-size: 0.8rem;
  color: #666;
  margin: 0;
}

.mini-cart-item__total {
  font-size: 0.9rem;
  font-weight: 600;
  color: #333;
  margin: 0;
}

.mini-cart__footer {
  padding: 1.5rem;
  border-top: 1px solid #e5e5e5;
}

.mini-cart__total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  font-size: 1.1rem;
  font-weight: 600;
}

.mini-cart__actions {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.mini-cart__actions .button--primary {
  background-color: var(--verde-escuro);
  color: #fff;
}

.mini-cart__empty {
  text-align: center;
  padding: 2rem;
  color: #666;
}

.mini-cart__empty-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .mini-cart__content {
    max-width: 100%;
  }
}
</style>
