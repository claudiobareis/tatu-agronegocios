{%- comment -%}
  Renders footer social media icons.
  
  @param {object} settings - The settings object containing social media properties
{%- endcomment -%}

<div class="footer-social-icons">
  {%- if settings.social_facebook_link != blank -%}
    <a href="{{ settings.social_facebook_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.facebook' | t }}">
      {% render 'icon-facebook' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_twitter_link != blank -%}
    <a href="{{ settings.social_twitter_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.twitter' | t }}">
      {% render 'icon-twitter' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_instagram_link != blank -%}
    <a href="{{ settings.social_instagram_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.instagram' | t }}">
      {% render 'icon-instagram' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_youtube_link != blank -%}
    <a href="{{ settings.social_youtube_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.youtube' | t }}">
      {% render 'icon-youtube' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_tiktok_link != blank -%}
    <a href="{{ settings.social_tiktok_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.tiktok' | t }}">
      {% render 'icon-tiktok' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_pinterest_link != blank -%}
    <a href="{{ settings.social_pinterest_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.pinterest' | t }}">
      {% render 'icon-pinterest' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_snapchat_link != blank -%}
    <a href="{{ settings.social_snapchat_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.snapchat' | t }}">
      {% render 'icon-snapchat' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_tumblr_link != blank -%}
    <a href="{{ settings.social_tumblr_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.tumblr' | t }}">
      {% render 'icon-tumblr' %}
    </a>
  {%- endif -%}
  
  {%- if settings.social_vimeo_link != blank -%}
    <a href="{{ settings.social_vimeo_link }}" class="social-icons__link" aria-label="{{ 'general.social.links.vimeo' | t }}">
      {% render 'icon-vimeo' %}
    </a>
  {%- endif -%}
</div>

{% stylesheet %}
  .footer-social-icons {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .social-icons__link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: currentColor;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }
  
  .social-icons__link:hover {
    opacity: 0.7;
  }
  
  .social-icons__link svg {
    width: 1.5rem;
    height: 1.5rem;
  }
{% endstylesheet %}
